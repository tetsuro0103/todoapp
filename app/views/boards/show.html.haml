.container
  .title_header
    = @board.name
  - @tasks.each do |task|
    = link_to task_path(task) do
      .task
        .task_content
          .task_eyecatch
            - if task.eyecatch.attached?
              = image_tag task.eyecatch
          .task_name
            = task.name
          .task_description
            = task.description
          .task_user_avatar_image
            = image_tag task.user.avatar_image
  = link_to new_task_path do
    .new-btn
      %p + Add new Card